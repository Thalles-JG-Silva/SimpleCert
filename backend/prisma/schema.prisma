datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Modelo de usu√°rio
model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  certificados Certificate[]

  @@map("users")
}

// Modelo de certificado
model Certificate {
  id           String   @id @default(uuid())
  titulo       String
  tipo         String
  horas        Int
  data         DateTime
  participante String
  participacao String
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("certificates")
}
